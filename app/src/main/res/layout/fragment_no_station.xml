<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rafael.multiecrasnav.intro.travel4all.NoStationFragment">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_1080"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/logo_8"
                android:scaleType="fitStart"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal"
            android:background="@drawable/locations_box">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/editTextOrigin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_start"
                    android:background="@null"
                    android:hint="Origem"

                    android:inputType="textCapSentences" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/greyLine"/>

                <EditText
                    android:id="@+id/editTextDestiny"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textCapSentences"
                    android:background="@null"
                    android:hint="Destino"
                    android:drawableLeft="@drawable/ic_destiny"
                     />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnSwap"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:rotation="90"
                android:background="#FFFFFF"
                android:src="@drawable/ic_swap"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <Button
                    android:id="@+id/buttonSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="Procurar"
                    android:padding="10dp"
                    android:textColor="#f1f1f1"
                    android:drawableLeft="@drawable/ic_search"
                    android:background="@color/colorBlueApp"
                    android:layout_marginEnd="2dp"/>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
