<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorMenu</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/bottomPrimary</item>
        <item name="android:itemBackground">@drawable/button_nav</item>
        <item name="itemIconTint">@color/bottomIcons</item>
        <item name="itemTextColor">@color/bottomText</item>
    </style>

    <style name="locationSearchBox">
        <item name="android:background">#BBFFFFFF</item>
        <item name="android:radius">10dp</item>
    </style>

</resources>
